			<th row="@H[k++]" class="header">G<sub>Ккор(М)</sub></th>
			<th row="@H[k++]" class="header">Q<sub>ПКОМ(М)</sub></th>
			<th row="@H[k++]" class="header">Q<sub>ККОМ(М)</sub></th>
			<th row="@H[k++]" class="bR header">Q<sub>ПОЛ(М)</sub></th>
		</tr>
		@{ k = 0; }
