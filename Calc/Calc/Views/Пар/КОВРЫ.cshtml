	<tbody>
	@using (var db = new DatabaseContext())
	{
		var model = from y in db.КОВРЫ
					from p in db.ПаротрассаКИМ.LeftJoin(x => x.DateRec == y.DateRec)
					where y.DateRec >= date && y.DateRec < date.AddMonths(1)
					orderby y.DateRec
					select new
					{
						КОВРЫ = y,
						ПаротрассаКИМ = p,
					};

		foreach (var x in model)
		{
			i++;
			k = 0;

		<tr>
			<td class="numbers">@i</td>
			<td row="@H[k++]" class="bR date">@x.КОВРЫ.DateRec.ToString("dd.MM.yyyy")</td>


			<td row="@H[k++]">
				<input data-id="B@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.PП)"
					   class="editable"
					   value="@x.КОВРЫ.PП.Pretty(2)" />
			</td>
			<td row="@H[k++]">
				<input data-id="C@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.tП)"
					   class="editable"
					   value="@x.КОВРЫ.tП.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="D@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.GП_)"
					   class="marked"
					   value="@x.КОВРЫ.GП_.Pretty(0)" />
			</td>
			<td row="@H[k++]">
				<input data-id="E@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.GkП_)"
					   class="marked"
					   value="@x.КОВРЫ.GkП_.Pretty(0)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="F@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.QП_)"
					   class="marked"
					   value="@x.КОВРЫ.QП_.Pretty(1)" />
			</td>

			<td row="@H[k++]">
				<input data-id="G@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.tK)"
					   class="editable"
					   value="@x.КОВРЫ.tK.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="H@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.PК)"
					   class="marked"
					   value="@x.КОВРЫ.PК.Pretty(2)" />
			</td>
			<td row="@H[k++]">
				<input data-id="I@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.GK_)"
					   class="marked"
					   value="@x.КОВРЫ.GK_.Pretty(0)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="J@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.QK_)"
					   class="marked"
					   value="@x.КОВРЫ.QK_.Pretty(1)" />
			</td>

			<td row="@H[k++]">
				<input data-id="K@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.GПкор)"
					   class="charged"
					   ondrag="ЕСЛИНЕТ(k@(i), E@(i))"
					   value="@x.КОВРЫ.GПкор.Pretty(0)" />
			</td>
			<td row="@H[k++]">
				<input data-id="L@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.QПкор)"
					   class="charged"
					   ondrag="ЕСЛИНЕТ(l@(i), F@(i))"
					   value="@x.КОВРЫ.QПкор.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="M@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.GKкор)"
					   class="charged"
					   ondrag="ЕСЛИНЕТ(m@(i), I@(i))"
					   value="@x.КОВРЫ.GKкор.Pretty(0)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="N@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.Qkкор)"
					   class="charged"
					   ondrag="ЕСЛИНЕТ(n@(i), J@(i))"
					   value="@x.КОВРЫ.Qkкор.Pretty(1)" />
			</td>

			<td row="@H[k++]">
				<input data-id="O@(i)"
					   data-name="@nameof(x.ПаротрассаКИМ).@nameof(x.ПаротрассаКИМ.tХИ)"
					   class="editable"
					   value="@x.ПаротрассаКИМ.tХИ.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="P@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.dQХИП)"
					   class="editable"
					   ondrag="ЕСЛИНЕТ(p@(i), ОКРУГЛ(O@(i) * K@(i) / 1000, 1))"
					   value="@x.КОВРЫ.dQХИП.Pretty(1)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="Q@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.dQХИК)"
					   class="editable"
					   ondrag="ЕСЛИНЕТ(q@(i), ОКРУГЛ(O@(i) * M@(i) / 1000, 1))"
					   value="@x.КОВРЫ.dQХИК.Pretty(1)" />
			</td>

			<td row="@H[k++]">
				<input data-id="R@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.QПКОМ)"
					   class="editable"
					   ondrag="ЕСЛИНЕТ(r@(i), L@(i) - P@(i))"
					   value="@x.КОВРЫ.QПКОМ.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="S@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.QККОМ)"
					   class="editable"
					   ondrag="ЕСЛИНЕТ(s@(i), N@(i) - Q@(i))"
					   value="@x.КОВРЫ.QККОМ.Pretty(1)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="T@(i)"
					   data-name="@nameof(x.КОВРЫ).@nameof(x.КОВРЫ.QПОЛКОМ)"
					   class="editable"
					   ondrag="ЕСЛИНЕТ(t@(i), R@(i) - S@(i))"
					   value="@x.КОВРЫ.QПОЛКОМ.Pretty(1)" />
			</td>

			@if (i == 1)
			{
				<td row="@H[k++]">
					<input data-id="U@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(M@(i), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="V@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(O@(i), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="W@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(T@(i), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="X@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(U@(i), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="Y@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(V@(i), 1)"
						   value="0" />
				</td>
			}
			else
			{
				<td row="@H[k++]">
					<input data-id="U@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(M@(i), 0) + ОКРУГЛ(U@(i - 1), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="V@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(O@(i), 0) + ОКРУГЛ(V@(i - 1), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="W@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(T@(i), 1) + ОКРУГЛ(W@(i - 1), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="X@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(U@(i), 1) + ОКРУГЛ(X@(i - 1), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="Y@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(V@(i), 1) + ОКРУГЛ(Y@(i - 1), 1)"
						   value="0" />
				</td>
			}
		</tr>

		}
	}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="2" class="bR">Суммарное</td>
			<td></td>
			<td></td>
			<td>
				<input data-id="D_1"
