			<th row="@H[k++]" class="header">Q<sub>К</sub></th>
			<th row="@H[k++]" class="header">Q<sub>ПОЛ</sub></th>
			<th row="@H[k++]" class="bR header">t<sub>ХИ</sub></th>
			<th row="@H[k++]" class="header">G<sub>кП(М)</sub></th>
			<th row="@H[k++]" class="header">Q<sub>П(М)</sub></th>
			<th row="@H[k++]" class="header">G<sub>К(М)</sub></th>
			<th row="@H[k++]" class="header">Q<sub>К(М)</sub></th>
			<th row="@H[k++]" class="header">Q<sub>ПОЛ(М)</sub></th>
		</tr>
		@{ k = 0; }
		<tr class="metrica">
			<th row="@H[k++]">МПа</th>
			<th row="@H[k++]">°С</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]" class="bR">ГКал</th>
			<th row="@H[k++]">МПа</th>
			<th row="@H[k++]">°С</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]" class="bR">ГКал</th>
			<th row="@H[k++]">°С</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]">ГКал</th>
			<th row="@H[k++]">ГКал</th>
			<th row="@H[k++]" class="bR">°С</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]">ГКал</th>
			<th row="@H[k++]">Тонн</th>
			<th row="@H[k++]">ГКал</th>
			<th row="@H[k++]">ГКал</th>
		</tr>
	</thead>
	<tbody>
	@using (var db = new DatabaseContext())
	{
		var model = db.ДОК
			.Where(x => x.DateRec >= date && x.DateRec < date.AddMonths(1))
			.OrderBy(x => x.DateRec)
			.ToList();

		foreach (var x in model)
		{
			i++;
			k = 0;

		<tr>
			<td class="numbers">@i</td>
			<td row="@H[k++]" class="bR date">@x.DateRec.ToString("dd.MM.yyyy")</td>

			<!-- П22 -->
			<td row="@H[k++]">
				<input data-id="B@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.PП22)"
					   class="editable"
					   value="@x.PП22.Pretty(2)" />
			</td>
			<td row="@H[k++]">
				<input data-id="C@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.tП22)"
					   class="editable"
					   value="@x.tП22.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="D@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.GП22)"
					   class="marked"
					   value="@x.GП22.Pretty(0)" />
			</td>
			<td row="@H[k++]">
				<input data-id="E@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.GkП22)"
					   class="marked"
					   ondrag="ЕСЛИНЕТ(e@(i), Коэффициент(D@(i), B@(i) * 10.197162, C@(i), 0, 0, 'КоэфРивкин'))"
					   value="@x.GkП22.Pretty(0)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="F@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.QП22)"
					   class="marked"
					   ondrag="ЕСЛИНЕТ(f@(i), Коэффициент(E@(i) / 1000, B@(i), C@(i), 0, 0, 'КоэфAlpia'))"
					   value="@x.QП22.Pretty(1)" />
			</td>

			<!-- П33 -->
			<td row="@H[k++]">
				<input data-id="G@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.PП33)"
					   class="editable"
					   value="@x.PП33.Pretty(2)" />
			</td>
			<td row="@H[k++]">
				<input data-id="H@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.tП33)"
					   class="editable"
					   value="@x.tП33.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="I@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.GП33)"
					   class="marked"
					   value="@x.GП33.Pretty(0)" />
			</td>
			<td row="@H[k++]">
				<input data-id="J@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.GkП33)"
					   class="marked"
					   ondrag="ЕСЛИНЕТ(j@(i), Коэффициент(I@(i), G@(i) * 10.197162, H@(i), 0, 0, 'КоэфРивкин'))"
					   value="@x.GkП33.Pretty(0)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="K@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.QП33)"
					   class="marked"
					   ondrag="ЕСЛИНЕТ(k@(i), Коэффициент(J@(i) / 1000, G@(i), H@(i), 0, 0, 'КоэфAlpia'))"
					   value="@x.QП33.Pretty(1)" />
			</td>

			<!-- К -->
			<td row="@H[k++]">
				<input data-id="L@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.tK)"
					   class="editable"
					   value="@x.tK.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="M@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.GK)"
					   class="marked"
					   value="@x.GK.Pretty(0)" />
			</td>
			<td row="@H[k++]">
				<input data-id="N@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.QK)"
					   class="marked"
					   ondrag="ЕСЛИНЕТ(n@(i), M@(i) * (L@(i) - P@(i)) / 1000)"
					   value="@x.QK.Pretty(1)" />
			</td>
			<td row="@H[k++]">
				<input data-id="O@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.QПОЛ)"
					   class="marked"
					   ondrag="ЕСЛИНЕТ(o@(i), ОКРУГЛ(F@(i), 1) + ОКРУГЛ(K@(i), 1) - ОКРУГЛ(N@(i), 1))"
					   value="@x.QПОЛ.Pretty(1)" />
			</td>
			<td row="@H[k++]" class="bR">
				<input data-id="P@(i)"
					   data-name="@nameof(db.ДОК).@nameof(x.tХИ)"
					   class="editable"
					   value="@x.tХИ.Pretty(1)" />
			</td>

			<!-- Результирующие данные -->
			@if (i == 1)
			{
				<td row="@H[k++]">
					<input data-id="Q@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(E@(i), 0) + ОКРУГЛ(J@(i), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="R@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(F@(i), 1) + ОКРУГЛ(K@(i), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="S@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(M@(i), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="T@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(N@(i), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="U@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(O@(i), 1)"
						   value="0" />
				</td>
			}
			else
			{
				<td row="@H[k++]">
					<input data-id="Q@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(E@(i), 0) + ОКРУГЛ(J@(i), 0) + ОКРУГЛ(Q@(i - 1), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="R@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(F@(i), 1) + ОКРУГЛ(K@(i), 1) + ОКРУГЛ(R@(i - 1), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="S@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(M@(i), 0) + ОКРУГЛ(S@(i - 1), 0)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="T@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(N@(i), 1) + ОКРУГЛ(T@(i - 1), 1)"
						   value="0" />
				</td>
				<td row="@H[k++]">
					<input data-id="U@(i)"
						   class="calculated"
						   ondrag="ОКРУГЛ(O@(i), 1) + ОКРУГЛ(U@(i - 1), 1)"
						   value="0" />
				</td>
			}
		</tr>
		}
	}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="2" class="bR">Суммарное</td>
			<td>
				<input data-id="B_1"
					   class="calculated"
					   ondrag="СУММ('B')" />
			</td>
			<td>
				<input data-id="C_1"
					   class="calculated"
					   ondrag="СУММ('C')" />
			</td>
			<td>
				<input data-id="D_1"
					   class="calculated"
					   ondrag="СУММ('D')" />
			</td>
			<td>
				<input data-id="E_1"
					   class="calculated"
					   ondrag="СУММ('E')" />
			</td>
			<td class="bR">
				<input data-id="F_1"
					   class="calculated"
					   ondrag="СУММ('F')" />
			</td>
			<td>
				<input data-id="G_1"
